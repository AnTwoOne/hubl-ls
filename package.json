{
  "name": "hubl-ls",
  "private": "true",
  "main": "./dist/extension",
  "scripts": {
    "compile": "rollup -c",
    "watch": "rollup -c -w",
    "package": "npm run compile && vsce package --no-dependencies",
    "test-e2e": "npm run compile && node dist/tests/run.js",
    "test-language": "vitest run --root packages/language",
    "lint": "npm run eslint packages"
  },
  "displayName": "HubL Language Server",
  "description": "Language server for HubSpot CMS HubL templates.",
  "version": "0.2.3",
  "author": "AnTwoOne",
  "icon": "images/icon-1024.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnTwoOne/hubl-ls"
  },
  "workspaces": [
    "packages/*"
  ],
  "publisher": "AnTwoOne",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onCommand:hublLS.restart",
    "onCommand:hublLS.setGlobalsFromFile",
    "onCommand:hublLS.setGlobals",
    "onLanguage:hubl",
    "onLanguage:hubl-html",
    "onLanguage:hubl-css",
    "onLanguage:hubl-js",
    "onLanguage:hubl-json",
    "onLanguage:hubl-xml",
    "onLanguage:hubl-yaml",
    "onLanguage:hubl-md",
    "onLanguage:html-hubl",
    "onLanguage:css-hubl",
    "onLanguage:js-hubl",
    "onLanguage:json-hubl",
    "onLanguage:xml-hubl",
    "onLanguage:yaml-hubl",
    "onLanguage:md-hubl"
  ],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "grammars": [
      {
        "scopeName": "comment.block.documentation.hubl",
        "path": "./syntaxes/hubl-jsdoc.tmLanguage.json",
        "injectTo": [
          "source.hubl",
          "text.html.hubl",
          "text.css.hubl"
        ]
      }
    ],
    "commands": [
      {
        "command": "hublLS.restart",
        "title": "HubL LS: Restart Server"
      },
      {
        "command": "hublLS.setGlobalsFromFile",
        "title": "HubL LS: Set Globals From File"
      }
    ],
    "configuration": {
      "title": "HubL LS",
      "properties": {
        "hublLS.extraFileExtensions": {
          "title": "Extra File Extensions",
          "description": "Extra file extension to match as HubL for import completions",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "hublLS.importPaths": {
          "title": "Import Paths",
          "description": "Additional paths to search for include/import/extends, e.g. C:\\hubl or /etc/hubl",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "hublLS.importURIs": {
          "title": "Import URIs",
          "description": "Additional URIs to search for include/import/extends. You should probably use Import Paths instead, only use this if you know what you're doing.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "hublLS.extraGlobals": {
          "title": "Extra Globals",
          "description": "Additional globals that are defined in the environment",
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "elementType": {
                "type": "string"
              },
              "literalValue": {
                "type": "string"
              },
              "documentation": {
                "type": "string"
              },
              "signature": {
                "type": "object",
                "properties": {
                  "documentation": {
                    "type": "string"
                  },
                  "arguments": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "default": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false,
                      "required": [
                        "name"
                      ]
                    }
                  },
                  "return": {
                    "type": "string"
                  }
                }
              }
            },
            "additionalProperties": false,
            "required": []
          },
          "default": {}
        },
        "hublLS.extraTests": {
          "title": "Extra Tests",
          "description": "Additional tests that are defined in the environment",
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "signature": {
                "type": "object",
                "properties": {
                  "documentation": {
                    "type": "string"
                  },
                  "arguments": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "default": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false,
                      "required": [
                        "name"
                      ]
                    }
                  },
                  "return": {
                    "type": "string"
                  }
                }
              }
            },
            "additionalProperties": false,
            "required": [
              "name"
            ]
          },
          "default": {}
        },
        "hublLS.extraFilters": {
          "title": "Extra Filters",
          "description": "Additional filters that are defined in the environment",
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "signature": {
                "type": "object",
                "properties": {
                  "documentation": {
                    "type": "string"
                  },
                  "arguments": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "default": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false,
                      "required": [
                        "name"
                      ]
                    }
                  },
                  "return": {
                    "type": "string"
                  }
                }
              }
            },
            "additionalProperties": false,
            "required": [
              "name"
            ]
          },
          "default": {}
        }
      }
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.2",
    "@types/vscode": "1.75.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.37.0",
    "expect": "^30.2.0",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "rollup": "^4.52.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  }
}
